        <TextBox x:Name="maxdec" HorizontalAlignment="Left" Height="23" Margin="345,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Button x:Name="newdec" Content="New" HorizontalAlignment="Left" Margin="308,177,0,0" VerticalAlignment="Top" Width="213" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.009"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="Res:" HorizontalAlignment="Left" Margin="308,111,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="resdec" HorizontalAlignment="Left" Height="23" Margin="344,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177"/>
        <Label Content="Min:" HorizontalAlignment="Left" Margin="308,27,0,0" VerticalAlignment="Top"/>
        <Label Content="Max:" HorizontalAlignment="Left" Margin="308,66,0,0" VerticalAlignment="Top"/>
        <Button x:Name="celdec" Content="Целые" HorizontalAlignment="Left" Margin="395,4,0,0" VerticalAlignment="Top" Width="72"/>

    </Grid>
</Window>
